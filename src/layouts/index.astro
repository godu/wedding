---
import Break from "../components/Break.astro";
import Header from "../components/Index/Header.astro";
import WhenWhere from "../components/Index/WhenWhere.astro";
import Countdown from "../components/Index/Countdown.astro";
import Schedule from "../components/Index/Schedule.astro";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import type { Language } from "../i18n/utils";
import SeatingChart from "../components/Index/SeatingChart.astro";

interface Props {
	lang: Language;
}

const { lang } = Astro.props;
---

<LanguageSwitcher />
<Break width={"sm:w-40"} margin={"min-w-[40%]"} />
<Header lang={lang} />
<Break width={"sm:w-60"} margin={"min-w-[50%]"} />
<Countdown lang={lang} />
<Break width={"sm:w-60"} margin={"min-w-[50%]"} />
<WhenWhere />
<Break width={"sm:w-60"} margin={"min-w-[50%]"} />
<Schedule />
<Break width={"sm:w-60"} margin={"min-w-[40%]"} />
<SeatingChart />
<Break width={"sm:w-40"} margin={"min-w-[40%]"} />
